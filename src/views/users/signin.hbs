<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header text-center">
                Ingrese a su cuenta.
            </div>
            <div class="card-body">
                <form action="/users/signin" method="post">
                    <img src="../img/Logo.jpg" class="rounded-circle mx-auto d-block m-4 logo" alt="Logo">
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Mail" value="{{email}}" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Contrasenia" value="{{password}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" name="ingresar" class="btn btn-primary btn-block"   >Listo!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>